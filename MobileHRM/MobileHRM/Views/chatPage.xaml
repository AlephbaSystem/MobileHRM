<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:sh="http://sharpnado.com"
             xmlns:customEntry="clr-namespace:MobileHRM.Controls" xmlns:vm="clr-namespace:MobileHRM.ViewModel"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1A1C23"
             x:Class="MobileHRM.Views.chatPage">
    <ContentView.BindingContext>
        <vm:ChatViewModel />
    </ContentView.BindingContext>
    <ContentView.Content>
        <Grid BackgroundColor="#1A1C23">
            <Frame Padding="0"
                   CornerRadius="11"
                   BackgroundColor="Transparent"
                   VerticalOptions="EndAndExpand"
                   Margin="10,10,10,40">
                <ListView ItemsSource="{Binding Items}" RefreshCommand="{Binding refresh}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,10">
                                <Grid ColumnDefinitions="2*,5*,2*">
                                    <Frame CornerRadius="50"
                                       HeightRequest="50"
                                       WidthRequest="50"
                                           VerticalOptions="Center"
                                       Grid.Column="0"
                                       HorizontalOptions="Center"
                                       BackgroundColor="White"
                                       Margin="0"
                                       Padding="0">
                                        <Image Source="image"
                                           Margin="0"/>
                                    </Frame>
                                    <StackLayout Grid.Column="1"
                                         HorizontalOptions="Start"
                                             Spacing="0"
                                             VerticalOptions="Center">
                                        <Label Text="{Binding name}" TextColor="#CCCCCC"/>
                                        <Label Text="{Binding SubTitle}" TextColor="#8D8D8D"/>
                                    </StackLayout>

                                    <StackLayout Grid.Column="2"
                                         HorizontalOptions="Center">
                                        <Label Text="{Binding Time}" TextColor="#CCCCCC" VerticalOptions="Start"/>
                                        <Frame Padding="0"
                                       BackgroundColor="#F07520"
                                       CornerRadius="44">
                                            <Label Text="{Binding Number}"
                                           TextColor="White" HorizontalOptions="Center"/>
                                        </Frame>
                                    </StackLayout>
                                    <BoxView HeightRequest="1" Color="#F9FAFB"
                                         VerticalOptions="EndAndExpand"
                                             Opacity="0.5"
                                             TranslationY="10"
                                             Margin="0,0,20,0"
                                         Grid.Column="1"
                                         Grid.ColumnSpan="2"/>
                                </Grid>
                            </StackLayout>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Frame>
        </Grid>
    </ContentView.Content>
</ContentView>