<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:sh="http://sharpnado.com"
             xmlns:customEntry="clr-namespace:MobileHRM.Controls"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#1A1C23"
             x:Class="MobileHRM.Views.chatPage">
    <ContentView.Content>
        <Grid BackgroundColor="#1A1C23" RowDefinitions="1.5*,0.8*,6*">
            <StackLayout Orientation="Horizontal"
                         Grid.Row="0"
                         Margin="20,0">
                <ImageButton Source="VectorarrowLeft.png" 
                       HeightRequest="25"
                       WidthRequest="25"
                             BackgroundColor="Transparent"/>
                <Frame CornerRadius="50"
                       HeightRequest="50"
                       WidthRequest="50"
                       VerticalOptions="Center"
                       HorizontalOptions="EndAndExpand"
                       BackgroundColor="#272B35"
                       Padding="0">
                    <Image BackgroundColor="#272B35"
                                             Margin="10"
                                         Source="Notification.png"/>
                </Frame>
                <Frame CornerRadius="50"
                       HeightRequest="50"
                       WidthRequest="50"
                       VerticalOptions="Center"
                       HorizontalOptions="End"
                       BackgroundColor="#272B35"
                       Padding="0">
                    <Image BackgroundColor="#272B35"
                           Margin="-2"
                                         Source="userImage.png"/>
                </Frame>
            </StackLayout>
            <sh:Shadows Padding="0"
                        Grid.Row="1"
                        CornerRadius="5"
                        Margin="10">
                <sh:Shadows.Shades>
                    <sh:ImmutableShades>
                        <sh:Shade BlurRadius="10"
                                  Opacity="0.3"
                                  Offset="0,5"
                                  Color="White" />
                    </sh:ImmutableShades>
                </sh:Shadows.Shades>
                <Frame Padding="0" 
                       BackgroundColor="#FFFFFF"
                       CornerRadius="5"
                       HeightRequest="70"
                       Margin="10,0">
                    <Grid ColumnDefinitions="0.5*,8*,2*">
                        <customEntry:CustomEntry Grid.Column="1" Placeholder="Search"/>
                        <Image Grid.Column="2"
                               Margin="10"
                               Source="Search.png"/>
                    </Grid>
                </Frame>
            </sh:Shadows>
            <Frame Padding="0"
                   CornerRadius="11"
                   BackgroundColor="Transparent"
                   Grid.Row="2"
                   VerticalOptions="EndAndExpand"
                   Margin="10,10,10,40">
                <ScrollView Padding="0">
                <CollectionView x:Name="CollectionChat">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Margin="0,10">
                                <Grid ColumnDefinitions="2*,5*,2*">
                                    <Frame CornerRadius="50"
                                       HeightRequest="50"
                                       WidthRequest="50"
                                           VerticalOptions="Center"
                                       Grid.Column="0"
                                       HorizontalOptions="Center"
                                       BackgroundColor="White"
                                       Margin="0"
                                       Padding="0">
                                        <Image Source="userImage.png"
                                           Margin="0"/>
                                    </Frame>
                                    <StackLayout Grid.Column="1"
                                         HorizontalOptions="Start"
                                             Spacing="0"
                                             VerticalOptions="Center">
                                        <Label Text="{Binding NameUser}" TextColor="#CCCCCC"/>
                                        <Label Text="{Binding SubTitle}" TextColor="#8D8D8D"/>
                                    </StackLayout>

                                    <StackLayout Grid.Column="2"
                                         HorizontalOptions="Center">
                                        <Label Text="{Binding Time}" TextColor="#CCCCCC" VerticalOptions="Start"/>
                                        <Frame Padding="0"
                                       BackgroundColor="#F07520"
                                       CornerRadius="44">
                                            <Label Text="{Binding Number}"
                                           TextColor="White" HorizontalOptions="Center"/>
                                        </Frame>
                                    </StackLayout>
                                    <BoxView HeightRequest="1" Color="#F9FAFB"
                                         VerticalOptions="EndAndExpand"
                                             Opacity="0.5"
                                             TranslationY="10"
                                             Margin="0,0,20,0"
                                         Grid.Column="1"
                                         Grid.ColumnSpan="2"/>
                                </Grid>
                                
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
            </Frame>
            
        </Grid>
    </ContentView.Content>
</ContentView>