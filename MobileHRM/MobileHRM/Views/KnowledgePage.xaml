<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileHRM.Views.KnowledgePage"
             BackgroundColor="#1A1C23">
    <ContentPage.Content>
        <Grid x:Name="myMain"
            BackgroundColor="#1A1C23">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                BackgroundColor="#1A1C23">

                <Label
                       x:Name="Title"
                       Margin="10"
                       VerticalOptions="Start"
                       HorizontalOptions="StartAndExpand"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#CCCCCC"
                       Text="{Binding Item.title}"/>
                <Label
                       x:Name="Author"
                       Margin="10"
                       VerticalOptions="Start"
                       HorizontalOptions="StartAndExpand"
                       FontSize="12"
                       TextColor="#8D8D8D"
                       Text="Amir Shafie - 19.02.2022 - 13:13 PM"
                    />
                <ScrollView Orientation="Horizontal">
                    <StackLayout BindableLayout.ItemsSource="{Binding Item.tags}" Orientation="Horizontal" x:Name="Technologys">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Frame
                                CornerRadius="15"
                                BackgroundColor="Red"
                                >
                                    <Label Text="{Binding tagName}"
                                        FontSize="9"
                                        TextColor="#FFFFFF"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                                </Frame>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </StackLayout>
                </ScrollView>
            </StackLayout>
            <Frame Grid.Row="1"  BackgroundColor="#26AB5B" Padding="5" >
                <Frame BackgroundColor="#272B35" >
                    <ScrollView>
                        <StackLayout>
                            <Label
                                Text="Details"
                                TextColor="#CCCCCC"
                                    />
                            <Label TextColor="#8D8D8D" Text="{Binding Item.detail}" />
                            <Line BackgroundColor="#26AB5B" HeightRequest="1"/>
                            <Label
                                Text="References"
                                TextColor="#CCCCCC"
                                    />
                            <StackLayout BindableLayout.ItemsSource="{Binding Item.references}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal">
                                            <Label TextColor="#8D8D8D" Text="{Binding Item.referencesName}" HorizontalOptions="Start" />
                                            <Label TextColor="#8D8D8D" Text="{Binding Item.link}" TextDecorations="Underline"  HorizontalTextAlignment="End"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                            <Line BackgroundColor="#26AB5B" HeightRequest="1"/>
                            <Label
                                Text="Comments"
                                TextColor="#CCCCCC"
                                    />
                            <StackLayout BindableLayout.ItemsSource="{Binding Comments}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Padding="0" CornerRadius="10" BackgroundColor="#1A1C23" >
                                            <Grid ColumnDefinitions="2*,0.5*,*" RowDefinitions="1*,2*">
                                                <StackLayout Grid.Row="0" Grid.Column="2" Orientation="Horizontal" VerticalOptions="StartAndExpand" Margin="10" HorizontalOptions="StartAndExpand" >
                                                    <Image WidthRequest="30" HeightRequest="40" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Aspect="AspectFit" Source="TasksGreen.png" />
                                                    <Image WidthRequest="30" HeightRequest="40" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Aspect="AspectFit" Source="TasksOrange.png"/>
                                                </StackLayout>
                                                <StackLayout Orientation="Horizontal" Grid.Row="0" Grid.Column="0" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand"  >
                                                    <Frame  WidthRequest="40" HeightRequest="40"  CornerRadius="20" Padding="0" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand"  >
                                                        <Image Source="imageUser.png" VerticalOptions="CenterAndExpand" Aspect="AspectFit" />
                                                    </Frame>
                                                    <StackLayout Orientation="Vertical">
                                                        <Label
                                                            FontSize="Small"
                                                            Text="{Binding userId,StringFormat='user {0}'}"
                                                            TextColor="#CCCCCC"
                                                            />
                                                        <Label
                                                            FontSize="Micro"
                                                            Text="{Binding createAt}"
                                                            VerticalTextAlignment="Center"
                                                            HorizontalTextAlignment="End"
                                                            TextColor="#8D8D8D"
                                                            />
                                                    </StackLayout>
                                                </StackLayout>
                                                <Label Margin="10,0" Grid.Row="1" VerticalTextAlignment="Start" Grid.ColumnSpan="3" HorizontalTextAlignment="Start" TextColor="#CCCCCC" Text="{Binding message}" />
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </StackLayout>
                        </StackLayout>
                    </ScrollView>
                </Frame>
            </Frame>
            <!--StrokeDashArray="1,1"
                StrokeDashOffset="6"-->
        </Grid>
    </ContentPage.Content>
</ContentPage>