<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileHRM.Views.chat3"
             BackgroundColor="#1A1C23"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid RowDefinitions="2*,7*">
            <Grid Grid.Row="0" ColumnDefinitions="*,5*,2*">
                <ImageButton Grid.Column="0" Source="VectorArrow.png"
                             VerticalOptions="Center"
                             BackgroundColor="Transparent"
                             HeightRequest="35"
                             />
                <Label Grid.Column="1" Text="ALEPHBA SYSTEM" 
                       TextColor="White" 
                       HorizontalOptions="End" 
                       VerticalOptions="Center"/>
                <Frame Grid.Column="2"
                       CornerRadius="50"
                       Padding="0"
                       VerticalOptions="Center"
                       Margin="10">
                    <Image Source="imageUser.png" >

                    </Image>

                </Frame>



            </Grid>
        </Grid>


    </ContentPage.Content>
</ContentPage>