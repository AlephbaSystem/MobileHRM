<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MobileHRM"
             xmlns:coustomEntry="clr-namespace:MobileHRM.Controls"
             NavigationPage.HasNavigationBar="False"
             x:Class="MobileHRM.Views.LogInPage"
             BackgroundImage="background.png">

    <StackLayout >
        <Grid VerticalOptions="FillAndExpand"
              RowDefinitions="5*,3*,3*"
              HorizontalOptions="FillAndExpand">

            <Image VerticalOptions="Start"
                   Margin="0,50,0,0"
                   HorizontalOptions="Center"
                   Grid.Row="0"
                   Source="Alephba.png"
                   WidthRequest="172"
                   HeightRequest="172"/>

            <Label HorizontalOptions="Center"
                   VerticalOptions="End"
                   TextColor="#CCCCCC"
                   Text="LOGIN TO YOUR DASHBOARD"
                   FontFamily="Roboto"
                   FontSize="20"
                   Grid.Row="0"/>
            
            <Frame Grid.Row="3"
                   Margin="8"
                   Padding="0"
                   CornerRadius="10"
                   WidthRequest="250"                   
                   HeightRequest="50"
                   MinimumHeightRequest="50"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="EndAndExpand"
                   BackgroundColor="#7F8D8D8D"
                   BorderColor="#26AB5B">
                <coustomEntry:CustomEntry                    
                    x:Name="email"
                    Placeholder="Email"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    PlaceholderColor="White"
                    TextColor="#e9ecef"
                    HorizontalTextAlignment="Center"
                        />
            </Frame>

           

            <Frame Grid.Row="4"
                   Margin="8"
                   Padding="0"
                   CornerRadius="10"
                   WidthRequest="250"
                   HeightRequest="50"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="StartAndExpand"
                   BackgroundColor="#7F8D8D8D"
                   BorderColor="#26AB5B"
                   IsVisible="false">
                <coustomEntry:CustomEntry 
                    x:Name="pass"
                    Placeholder="Password"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    PlaceholderColor="White"
                    TextColor="#e9ecef"
                    IsPassword="True"
                    HorizontalTextAlignment="Center"/>
            </Frame>

            <Button Grid.Row="6"
                    BackgroundColor="#F07520"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    WidthRequest="290"
                    HeightRequest="50"
                    Text="LogIn"
                    TextColor="White"
                    CornerRadius="10"
                    Clicked="LogIn_Btn_Clk"/>

        </Grid>
    </StackLayout>

</ContentPage>
