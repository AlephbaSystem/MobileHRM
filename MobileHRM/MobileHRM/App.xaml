<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileHRM.App">
    <Application.Resources>
        <Style x:Key="basic"
           TargetType="Shell">
            <Setter Property="Shell.FlyoutBackgroundColor"
                Value="LightGreen" />
            <Setter Property="Shell.TabBarBackgroundColor"
                Value="#2f353a" />
            <Setter Property="Shell.BackgroundColor"
                Value="#2f353a" />
            <Setter Property="Shell.TitleColor"
                Value="Silver" />
            <Setter Property="Shell.DisabledColor"
                Value="Silver" />
            <Setter Property="Shell.UnselectedColor"
                Value="LightGreen" />
            <Setter Property="Shell.BackgroundColor" Value="#1A1C23"/>
        </Style>
        <Style TargetType="Label" ApplyToDerivedTypes="True">
            <Setter Property="FontFamily" Value="quickSand" />
        </Style>
        <Style TargetType="SearchBar" ApplyToDerivedTypes="True">
            <Setter Property="FontFamily" Value="quickSand" />
        </Style>
        <Style TargetType="Entry" ApplyToDerivedTypes="True">
            <Setter Property="FontFamily" Value="quickSand" />
        </Style>
    </Application.Resources>
</Application>